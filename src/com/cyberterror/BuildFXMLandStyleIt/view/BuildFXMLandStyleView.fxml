<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<GridPane alignment="CENTER"
          minHeight="200.0"
          minWidth="350.0"
          xmlns="http://javafx.com/javafx/8.0.65"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.cyberterror.BuildFXMLandStyleIt.controller.BuildFXMLandStyleController"
          styleClass="root">
          <!--Можем добавить стиль вот так (к root элементу): -->
          <!--style="-fx-font-family: serif; -fx-vgap: 10; -fx-hgap: 10; -fx-alignment: center"-->
   <children>

      <Text text="Sup?"
            GridPane.columnIndex="1"
            GridPane.halignment="CENTER"
            GridPane.rowIndex="1"
            styleClass="title"/>

      <Label text="First Name" GridPane.rowIndex="2" />

      <TextField fx:id="firstNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

       <!--We add Action Event handler to the button -->
      <Button onAction="#handleSaySup" text="Say Sup!" GridPane.columnIndex="1" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />

   </children>
</GridPane>
